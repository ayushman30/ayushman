function showPage1(){
 document.getElementById("loader").style.display = "none";
 document.getElementById("gr").style.display = "block";
 setTimeout(showPage, 3000);
}
function showPage() {
  document.getElementById("gr").style.display = "none";
  document.getElementById("unknown").style.display = "block";
}

window.onscroll = function() {scrollFunctionsss()};
function scrollFunctionsss() {
  if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
    document.getElementById("head").style.top = "0";
  } else {
    document.getElementById("head").style.top = "-90px";
  }
}
</script>
